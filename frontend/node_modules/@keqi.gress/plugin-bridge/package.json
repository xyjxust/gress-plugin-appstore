    "vue": "^3.3.0",
    "vue-router": "^4.0.0",
    "pinia": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vue": "^3.3.0",
    "vue-router": "^4.0.0",
    "pinia": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/gress.git",
    "directory": "packages/plugin-bridge"
